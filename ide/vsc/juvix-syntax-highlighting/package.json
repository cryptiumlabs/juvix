{
    "name": "language-juvix",
    "displayName": "Juvix Syntax Highlighting",
    "description": "Syntax Highlighting for the Juvix programming language",
    "version": "0.0.1",
    "publisher": "metastate.dev",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#293845",
        "theme": "dark"
    },
    "files": [
        "src/*",
        "syntaxes/*.json",
        "images/",
        "README.md",
        "LICENSE",
        "*-configuration.json",
        "tsconfig.json",
        "CHANGELOG.md"
    ],
    "keywords": [
        "language",
        "juvix",
        "highlight",
        "syntax"
    ],
    "homepage": "http://juvix.org",
    "repository": {
        "type": "git",
        "url": "https://github.com/metastatedev/juvix.git"
    },
    "bugs": {
        "url": "https://github.com/metastatedev/juvix/issues"
    },
    "activationEvents": [
        "onLanguage:juvix"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Juvix configuration",
            "properties": {
                "juvix.indentationRules.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Set to 'false' to disable automatically increasing indent on newlines after '=', 'do', 'where' etc."
                }
            }
        },
        "languages": [
            {
                "id": "juvix",
                "aliases": [
                    "Juvix",
                    "juvix"
                ],
                "extensions": [
                    ".jvx"
                ],
                "configuration": "./juvix-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "juvix",
                "scopeName": "source.juvix",
                "path": "./syntaxes/juvix.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "start": "npm install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "js-yaml": "^3.13.1",
        "npm": "^6.14.5",
        "typescript": "^2.6.2",
        "vsce": "^1.75.0",
        "vscode": "^1.0.0"
    }
}
